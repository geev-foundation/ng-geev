{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@angular/core": ["node_modules/@angular/core"],
      "@geev/*": ["src/*"]
    },
    "rootDir": ".",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es5",
    "skipLibCheck": false,
    "lib": [
      "es2015", 
      "dom"
    ]
  },
  "include": [
    "./index.ts"
  ],
  "files": [
      "index.ts",
      "./node_modules/geev-assets/Geev/Framework/scripts/geev.d.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}